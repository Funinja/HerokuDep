    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome Debugger",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/Education_Pathways/frontend/src/"
        },
        {
            "name": "Start Frontend",
            "request": "launch",
            "cwd": "${workspaceFolder}/Education_Pathways/frontend",
            "runtimeArgs": [
                "start",
                "debug"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Run Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "./Education_Pathways/index.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true,
            "justMyCode": true
        },
    ]
}